{{#with gameDetails}}
<div class="card-deck">
  <div class="card bg-dark text-white mt-3 mb-3">
    <img class="card-img" src={{thumbnail}} alt="Card image">
    <div class="card-img-overlay">
      <h4 class="card-title">{{title}}</h4>
    </div>
  </div>
  <div class="card text-white bg-dark mt-3 mb-3" >
    <div class="card-body">
      <p class="card-text">Description: <small>{{description}}</small></p>
    </div>
  </div>
</div>
{{/with}}
<div class="card-deck">
{{#with gameDetails}}
  <div class="card text-white bg-dark mb-3">
    <div class="card-body">
      <p class="card-text"><h4>More Info: </h4><p>
      <p class="card-text">{{genre}}</p>
      <p class="card-text">{{platform}}</p>
      <p class="card-text">{{publisher}}</p>
      <p class="card-text">{{developer}}</p>
      <p class="card-text">{{release_date}}</p>
      <a href={{freetogame_profile_url}} class="card-link">{{freetogame_profile_url}}</a>
      <p class="ninja">{{id}}</p>
     
      {{!-- <p class="card-text"><small class="text-muted">{{freetogame_profile_url}}</small></p> --}}
      </div>
      </div>
      <div class="card text-white bg-dark mb-3">
      <div class="card-body">
<p class="card-text"><h4>Add your comments: </h4><p></p>
<form action="/add-comment" method="post">
<input type="hidden" name="id" value={{id}}>
<div>
<textarea name="comments" id="comments" class="text form-control mb-3">
Comment
</textarea>
</div>
<input type="submit"  value="Add" class="btn btn-secondary btn-block">
</form>
<br>
<h5 class="text-danger"><em>Conduct guidelines:</em></h5>
<ul>
<li class="text-secondary"><em>Treat others how you would like to be treated.</em></li>
<li class="text-secondary"><em>Treat people online the same way you would treat someone face-to-face. If you wouldn’t say it or do it in person, don’t do it online.</em></li>
<li class="text-secondary"><em>Acknowledge and accept others’ ideas.</em></li>
</ul>
    </div>
  </div>
</div>
{{/with}}
<div class="card-deck">
<div class="card text-white bg-dark mb-3">
  <h4 class="card-header">
    Comments:
  </h4>
  {{#each singleComment}}
  <ul class="list-group list-group-flush text-white bg-dark">
    <li class="list-group-item text-white bg-secondary  mb-3">User: {{username}}</li>
    <li class="list-group-item text-white bg-secondary  mb-3">Comment: {{comment}}</li>
    <li class="list-group-item text-white bg-dark mb-3">
        <div class="card-group">
          <div class="card bg-dark">
            <div class="card-body">
              <p class="card-text">
        <form action = "/edit-comment" method="POST">
        <textarea class="text form-control" name="comment">{{comment}}</textarea>
        </p>
        </div>
        </div>
        <div class="card bg-dark">
            <div class="card-body">
              <p class="card-text">
        <input type="hidden" name="commentID" value="{{_id}}">
        <input type="hidden" name="username" value="{{username}}">
        <button type="submit" class="btn btn-secondary btn-block">Edit</button>
         </form>
       
        <form action = "/delete-comment" method="POST">
        <input type="hidden" name="commentID" value="{{_id}}">
         <input type="hidden" name="username" value="{{username}}">
        <button type="submit" class="btn btn-secondary btn-block">Delete</button>
        </form></p>
            </div>
          </div>
        </div>
    </li>
  </ul>
{{/each}}
  </div>
</div>




